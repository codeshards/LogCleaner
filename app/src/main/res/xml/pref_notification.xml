<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <CheckBoxPreference
        android:key="enable_notifications"
        android:title="@string/pref_enable_notifications"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:dependency="enable_notifications"
        android:key="enable_clean_at_boot_time_notification"
        android:title="@string/pref_enable_clean_at_boot_time_notification"
        android:defaultValue="true" />

</PreferenceScreen>
